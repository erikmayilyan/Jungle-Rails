<h1>Sign Up</h1>
<br>
<%= form_for :user, url: '/users' do |form| %>
  <h4>First Name:</h4> <%= form.text_field :first_name %>
  <br>
  <h4>Last Name:</h4> <%= form.text_field :last_name %>
  <br>
  <h4>Email:</h4> <%= form.text_field :email %>
  <br>
  <h4>Password:</h4> <%= form.password_field :password %>
  <br>
  <h4>Password Confirmation:</h4> <%= form.password_field :password_confirmation %>
  <br>
  <br>
  <%= form.submit "Create" %>
<% end %>